@{
    ViewData["Title"] = "Bibliotheque en ligne";
}

@model IEnumerable<planete_biblio.Entities.Categorie>

<div class="container-fluid pt-4">
    <div class="collapse collapse-horizontal show" style="float:left; margin-right: 30px; margin-top: 15px;" id="collapseWidthExample">
        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <a href="#" class="accordion-button collapsed btn btn-sm text-primary" style="font-size: 13px; padding: 0.5rem 1.25rem;" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <small style="padding-right: 10px;">PARAMETRES</small>
                    </a>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body p-0">
                        <div class="list-group">
                            <a href="#" class="list-group-item list-group-item-action">Livre</a>
                            <a href="#" class="list-group-item list-group-item-action">Auteur</a>
                            <a href="#" class="list-group-item list-group-item-action">Editeur</a>
                            <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Categorie" asp-action="Index">Categorie</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <a href="#" class="accordion-button collapsed btn btn-sm text-primary"  style="font-size: 13px; padding: 0.5rem 1.25rem;" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                         <small style="padding-right: 10px;">USERS/ROLES</small>
                    </a>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                    <div class="accordion-body p-0">
                        <div class="list-group">
                            <a href="#" class="list-group-item list-group-item-action">Utilisateur</a>
                            <a href="#" class="list-group-item list-group-item-action">Role</a>
                            <a href="#" class="list-group-item list-group-item-action">Utilisateur/Role</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingThree">
                    <a href="#" class="accordion-button collapsed btn btn-sm text-primary"  style="font-size: 13px; padding: 0.5rem 1.25rem;" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                         <small style="padding-right: 10px;">CONFIGURATION</small>
                    </a>
                </h2>
                <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                    <div class="accordion-body p-0">
                        <div class="list-group">
                            <a href="#" class="list-group-item list-group-item-action">Pays</a>
                            <a href="#" class="list-group-item list-group-item-action">Langue</a>
                            <a href="#" class="list-group-item list-group-item-action">Status</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="p-4" style="display:inline;">
        <div class="row">
            <div class="col-md-5">
                <a  href="#" class="text-primary" style="font-size: 16px;" data-bs-toggle="collapse" data-bs-target="#collapseWidthExample" aria-expanded="false" aria-controls="collapseWidthExample">Categorie d'une livre</a>
            </div>
        </div>
        <div class="d-grid gap-3">
            <div class="row border p-2">
                <div class="col-md-6">
                    <label for="inputEmail4" class="form-label">Code</label>
                    <input type="text" class="form-control form-control-sm" id="inp10">
                </div>
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">Intitule</label>
                    <input type="text" class="form-control form-control-sm" id="inp11">
                </div>
            </div>
            <div class="row">
                <table id="grdLivre" class="table table-striped border-primary">
                    <thead>
                        <tr class="d-flex">
                            <th class="col-md-2 text-center"><input name="checkAll" id="checkAll" type="checkbox" /></th>
                            <th class="col-md-5">Code</th>
                            <th class="col-md-5">Intitulé</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="d-flex">
                                <td class="col-md-2 text-center"><input type='checkbox' class='droit' id='chkCategorie' name='chkCategorie[]' value=OID_CAT /></td>
                                <td class="col-md-5">@item.CategorieId</td>
                                <td class="col-md-5">@item.Libelle</td>
                            </tr>
                        }
                    </tbody>
                    @* <tfoot>
                    <tr>
                    <th class="datatable-nosort" style="text-align:center"><input name="checkAll" id="checkAll" type="checkbox" /></th>
                    <th>Code</th>
                    <th>Intitulé</th>
                    </tr>
                    </tfoot>*@
                </table>
            </div>
            <div class="card mt-3" style="margin-left: -10px; margin-right: -10px">
                <div class="card-body">
                    <a class="btn btn-outline-secondary btn-sm" asp-area="" asp-controller="Categorie" asp-action="Create">
                        <i class="fa fa-pencil fa-fw" style="color: #3c8dbc;"></i> Ajouter
                    </a>
                    <a class="btn btn-outline-secondary btn-sm disabled" asp-area="" asp-controller="Categorie" asp-action="Detail">
                        <i class="fa fa-eye fa-fw" style="color: #3c8dbc;"></i> Consulter
                    </a>
                    <a class="btn btn-outline-secondary btn-sm disabled" data-toggle="modal" data-target="#myModal">
                        <i class="fa fa-trash-o fa-fw" style="color: #3c8dbc;"></i> Supprimer
                    </a>
                    <a class="btn btn-outline-secondary btn-sm disabled pull-right" id="print">
                        <i class="fa fa-print fa-fw" style="color: #3c8dbc;"></i> Imprimer
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

 @section Scripts {
     <script type="text/javascript" src="~/lib/DataTables/DataTables-1.12.1/js/jquery.dataTables.js"></script>
     <script type="text/javascript" src="~/lib/DataTables/DataTables-1.12.1/js/dataTables.bootstrap5.js"></script>
     <script type="text/javascript" src="~/lib/DataTables/ColReorder-1.5.6/js/dataTables.colReorder.js"></script>

      <script type="text/javascript">
           $(document).ready(function() {
                
                var table = $('#grdLivre').DataTable({  
                    "pageLength": 5,
                    "lengthMenu": [ 5, 10, 15, 20, 25 ],
                    "bLengthChange": false,
                    "columnDefs": [{ targets: [0], sortable: false }],
                    "order": [[1, "asc"]],
                    "oLanguage": { "sProcessing":   "Traitement en cours...",
                                   "sLengthMenu":   "Afficher _MENU_ éléments",
                                   "sZeroRecords":  "Aucun élément disponible",
                                   "sInfo": "Affichage de l'élement _START_ à _END_ sur _TOTAL_ éléments",
                                   "sInfoEmpty": "Affichage de l'élement 0 à 0 sur 0 éléments",
                                   "sInfoFiltered": "(filtré de _MAX_ éléments au total)",
                                   "sInfoPostFix":  "",
                                   "sSearch":       "Rechercher:",
                                   "sUrl":          "",
                                   "oPaginate": {
                                                "sFirst":    "Premier",
                                                "sPrevious": "Préc",
                                                "sNext":     "Suiv",
                                                "sLast":     "Dernier"
                                                }
                                 },
                    "autoWidth": false
                });

                $(".dataTables_filter").hide();
                $(".dataTables_info").hide();
                $('.dataTables_paginate').addClass("pull-right");

                $('#collapseWidthExample').on('hidden.bs.collapse', function () {
                    console.log("123456789");
                })
           });
      </script>
 }
